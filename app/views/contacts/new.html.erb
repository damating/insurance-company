<div class="contact_page">
  <div class="container">
    <h3 class="head">Kontakt</h3>
    <!---728x90--->
    <div class="col-md-8">
      <%= simple_form_for @contact do |f| %>
          <div class="form-group contact-form">
            <%= f.input :name, input_html: {class: 'form-control form-form'}, label_html: {class: 'label-contact'}, label: 'Nazwisko', required: true %>
          </div>
          <div class="form-group contact-form">
            <%= f.input :email, input_html: {class: 'form-control form-form'}, label_html: {class: 'label-contact'}, label: 'Email', required: true %>
          </div>
          <div class="form-group contact-form">
            <%= f.input :subject, input_html: {class: 'form-control form-form'}, label_html: {class: 'label-contact'}, label: 'Temat wiadomości' %>
          </div>
          <div class="form-group contact-form">
            <%= f.input :message, :as => :text, input_html: {class: 'form-control form-form'}, label_html: {class: 'label-contact'}, label: 'Wiadomość', required: true %>
          </div>
          <div class="form-group contact-form">
            <%= f.button :submit, 'Wyślij wiadomość', class: "btn btn-primary btn-send" %>
          </div>
      <% end %>
    </div>

    <div class="col-md-4 contact-grids">
      <div class=" contact-grid">
        <div class="contact-grid1">
          <div class="contact-grid2 ">
            <i class="glyphicon glyphicon-map-marker" aria-hidden="true"></i>
          </div>
          <div class="contact-grid3">
            <h4>Adres</h4>

            <p>os. Piastów 41,  <span>31-625 Kraków.</span></p>
          </div>
        </div>
      </div>
      <div class="contact-grid">
        <div class="contact-grid1">
          <div class="contact-grid2">
            <i class="glyphicon glyphicon-earphone" aria-hidden="true"></i>
          </div>
          <div class="contact-grid3">
            <h4>Telefon</h4>

            <p>+12 647 49 37<span>515 386 831</span><span>509 788 642</span></p>
          </div>
        </div>
      </div>
      <div class="contact-grid">
        <div class="contact-grid1">
          <div class="contact-grid2">
            <i class="glyphicon glyphicon-envelope" aria-hidden="true"></i>
          </div>
          <div class="contact-grid3">
            <h4>Email</h4>

            <p><a href="mailto:info@example.com">mbupolisa.piastow@op.pl</a></p>
          </div>
        </div>
      </div>
      <div class="contact-grid">
        <div class="contact-grid1">
          <div class="contact-grid2">
            <i class="glyphicon glyphicon-envelope" aria-hidden="true"></i>
          </div>
          <div class="contact-grid3">
            <h4>Godziny otwarcia</h4>

            <p><a href="mailto:info@example.com">Poniedziałek-Piątek 9:00-19:00</a><span>Sobota 10:00-14:00</span></p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div id="map" style="width:100%;height:500px"></div>
</div>

<script>
    $(document).ready(function ($) {
        $('.nav li').removeClass('active');
        $('#contact_menu').addClass('active');
    })

    function initMap() {
        var myLatLng = {lat: 50.0985449, lng: 20.013811};

        var map = new google.maps.Map(document.getElementById('map'), {
            zoom: 17,
            center: myLatLng
        });

        var marker = new google.maps.Marker({
            position: myLatLng,
            map: map,
            title: 'Ubezpieczenia'
        });
    }
</script>
<script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDAh2SHxDHMKyQXgATdyKh9hHo_SnME0nU&callback=initMap">
</script>