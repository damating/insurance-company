<div class="contact_page calculate_page">
  <div class="container">
    <h3 class="agileits-title">Kalkulator OC</h3>
    <!---728x90--->
    <%= simple_form_for @calculator do |f| %>
        <div class="row">
            <div class="col-md-5 form-group contact-form">
              <%= f.input :brand, input_html: {class: 'form-control form-form'}, label_html: {class: 'label-contact'}, label: 'Marka', required: true %>
            </div>
            <div class="col-md-5 form-group contact-form">
              <%= f.input :model, input_html: {class: 'form-control form-form'}, label_html: {class: 'label-contact'}, label: 'Model', required: true %>
            </div>
            <div class="col-md-2 form-group contact-form">
              <%= f.input :capacity, input_html: {class: 'form-control form-form'}, label_html: {class: 'label-contact'}, label: 'Pojemność', required: true %>
            </div>
        </div>
        <div class="row">
          <div class="col-md-6 form-group contact-form">
            <%= f.input :owner_birth, as: :date, start_year: Date.today.year - 80,
                        end_year: Date.today.year - 12, order: [:day, :month, :year],
                        input_html: {class: 'form-control date-form'}, label_html: {class: 'label-contact label-date'}, label: 'Data urodzenia właściciela' %>
          </div>
          <div class="col-md-4 form-group contact-form">
            <%= f.input :driving_licence_issue_date, as: :date, start_year: Date.today.year - 80,
                        end_year: Date.today.year - 12, discard_day: true, order: [:month, :year],
                        input_html: {class: 'form-control date-form date-form-licence'}, label_html: {class: 'label-contact label-date'}, label: 'Data wydania prawo jazdy' %>
          </div>
          <div class="col-md-2 form-group contact-form">
            <%= f.input :year, collection: 1989..Date.today.year, selected: Date.today.year, input_html: {class: 'form-control form-form'}, label_html: {class: 'label-contact'}, label: 'Rok produkcji' %>
          </div>
        </div>
        <div class="row">
            <div class="col-md-6 form-group contact-form">
              <%= f.input :registered_zipcode, input_html: {class: 'form-control form-form'}, label_html: {class: 'label-contact'}, label: 'Miejsce rejestracji (kod pocztowy)', required: true %>
            </div>
            <div class="col-md-6 form-group contact-form">
              <%= f.input :previous_insurance_company, input_html: {class: 'form-control form-form'}, label_html: {class: 'label-contact'}, label: 'Poprzedni zakład ubezpieczeń', required: true %>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 form-group contact-form">
              <%= f.input :last_policy_discount, input_html: {class: 'form-control form-form'}, label_html: {class: 'label-contact'}, label: 'Zniżki w ostatniej polisie', required: true %>
            </div>
            <div class="col-md-6 form-group contact-form">
              <%= f.input :last_year_damage_amount, input_html: {class: 'form-control form-form'}, label_html: {class: 'label-contact'}, label: 'Ilość szkód w ostatnim roku', required: true %>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 form-group contact-form">
              <%= f.input :contact_name, input_html: {class: 'form-control form-form'}, label_html: {class: 'label-contact'}, label: 'Osoba do kontaktu', required: true %>
            </div>
            <div class="col-md-4 form-group contact-form">
              <%= f.input :email, input_html: {class: 'form-control form-form'}, label_html: {class: 'label-contact'}, label: 'Email', required: true %>
            </div>
            <div class="col-md-4 form-group contact-form">
              <%= f.input :phone_number, input_html: {class: 'form-control form-form'}, label_html: {class: 'label-contact'}, label: 'Telefon kontaktowy', required: true %>
            </div>
        </div>

        <div class="form-group contact-form">
          <%= f.button :submit, 'Wyślij wiadomość', class: "btn btn-primary btn-send" %>
        </div>
    <% end %>
  </div>
</div>

<script>
    $(document).ready(function ($) {
        $('.nav li').removeClass('active');
        $('#calculator_menu').addClass('active');
    })
</script>

